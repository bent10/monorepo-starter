{
  "name": "@example/bootstrap",
  "description": "A bare-bone template of how to create Bootstrap theme",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/monorepo-starter",
  "homepage": "https://github.com/bent10/monorepo-starter/tree/packages/bootstrap#readme",
  "bugs": "https://github.com/bent10/monorepo-starter/issues",
  "license": "MIT",
  "keywords": [
    "example",
    "bootstrap"
  ],
  "scss": "./scss/theme.scss",
  "files": [
    "dist",
    "scss",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "doogu watch \"scss/*.scss\" \"scss/**/*.scss\" --command=\"npm run build\"",
    "build": "npm-run-all build:*",
    "build:scss": "sass \"scss/:dist/\" --load-path=\"../../\" --style=expanded --source-map",
    "build:rtl": "postcss \"dist/**/*.css\" \"!dist/**/*.{min,rtl}.css\" --use=rtlcss --dir=dist --base=dist --ext=\".rtl.css\" --map",
    "build:prefix": "postcss \"dist/**/*.css\" --replace --use=autoprefixer --map",
    "build:min": "postcss \"dist/**/*.css\" \"!dist/**/*.min.css\" --use=cssnano --dir=dist --base=dist --ext=\".min.css\" --map",
    "lint": "stylelint \"**/*.{css,scss}\" --ignore-path=\"**/*.min.css\" --cache --cache-location=\"node_modules/.cache/.stylelintcache\" --rd"
  },
  "dependencies": {
    "bootstrap": "^5.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.4",
    "cssnano": "^5.0.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-rtlcss": "^3.3.5",
    "purgecss": "^4.0.3",
    "sass": "^1.51.0",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.3"
  }
}
