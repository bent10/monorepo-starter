{
  "name": "vite-plugin-foo",
  "description": "A bare-bones template for Vite plugin",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Your ORG (https://example.com)",
  "repository": "https://github.com/org/monorepo",
  "homepage": "https://github.com/org/monorepo/tree/main/packages/plugin-foo",
  "license": "MIT",
  "keywords": [
    "vite",
    "vite-plugin",
    "foo"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "changelog.md",
    "readme.md"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "vite build --watch",
    "build": "vite build && npm run types",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "types": "tsc src/*.ts -d --emitDeclarationOnly --outDir ./dist && resolve-tspaths -o ./dist",
    "lint": "tsc --noEmit && eslint . --cache --cache-location .cache/eslint",
    "format": "prettier . --write --cache-location .cache/prettier --ignore-path ../../.prettierignore"
  },
  "dependencies": {},
  "peerDependencies": {
    "vite": ">=4.0.0"
  }
}
