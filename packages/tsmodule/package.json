{
  "name": "tsmodule",
  "description": "A bare-bones template for TypeScript module",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/monorepo-starter",
  "homepage": "https://github.com/bent10/monorepo-starter/tree/packages/tsmodule#readme",
  "bugs": "https://github.com/bent10/monorepo-starter/issues",
  "license": "MIT",
  "keywords": [
    "example",
    "typescript",
    "module",
    "esm"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run build && npm run watch",
    "watch": "chokidar \"src/*.ts\" -c \"npm run build\"",
    "lint": "tsc --noEmit && eslint \"./src\" --ext \".ts\" --cache --cache-location \".cache/.eslintcache\"",
    "build": "swc \"./src\" -d \"dist\" && tsc -d --emitDeclarationOnly",
    "test": "node --experimental-vm-modules --no-warnings ../../node_modules/jest/bin/jest.js --verbose",
    "coverage": "npm test -- --coverage"
  },
  "dependencies": {},
  "eslintConfig": {
    "extends": "../../node_modules/doogu/config/eslint.json"
  },
  "prettier": "doogu/config/prettier.json",
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "clearMocks": true,
    "coverageDirectory": "coverage"
  }
}
