{
  "name": "core",
  "description": "A bare-bones template for shared utilities",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Your ORG (https://example.com)",
  "repository": "https://github.com/org/monorepo",
  "homepage": "https://github.com/org/monorepo/tree/main/packages/core",
  "license": "MIT",
  "keywords": [
    "github",
    "npm",
    "starter",
    "package",
    "template",
    "boilerplate",
    "example",
    "typescript",
    "module",
    "esm"
  ],
  "type": "module",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "changelog.md",
    "readme.md"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "vite build --watch & vite",
    "build": "vite build && npm run types",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "types": "tsc src/*.ts -d --emitDeclarationOnly --outDir ./dist && resolve-tspaths -o ./dist",
    "lint": "tsc --noEmit && eslint .",
    "format": "prettier . --write --cache-location .cache/prettier --ignore-path ../../.prettierignore"
  }
}
