{
  "name": "theme",
  "description": "A bare-bones template for Bootstrap-powered npm projects",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/monorepo-starter",
  "homepage": "https://github.com/bent10/monorepo-starter/tree/packages/theme#readme",
  "bugs": "https://github.com/bent10/monorepo-starter/issues",
  "license": "MIT",
  "keywords": [
    "example",
    "bootstrap",
    "theme",
    "scss",
    "css"
  ],
  "scss": "./scss/theme.scss",
  "main": "dist/theme.css",
  "files": [
    "dist",
    "scss",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "chokidar \"scss/*.scss\" \"scss/**/*.scss\" --command=\"npm run build\"",
    "build": "npm-run-all \"build:*\"",
    "build:scss": "sass \"scss/theme.scss\" \"dist/theme.css\" --load-path=\"../../\" --style=expanded",
    "build:rtl": "postcss \"dist/**/*.css\" \"!dist/**/*.{min,rtl}.css\" --use=rtlcss --dir=dist --base=dist --ext=\".rtl.css\" --map",
    "build:prefix": "postcss \"dist/**/*.css\" --replace --use=autoprefixer --map",
    "build:min": "postcss \"dist/**/*.css\" \"!dist/**/*.min.css\" --use=cssnano --dir=dist --base=dist --ext=\".min.css\" --map",
    "lint": "stylelint \"scss/\" --cache --cache-location=\".cache/.stylelintcache\" --rd"
  },
  "dependencies": {
    "bootstrap": "^5.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.9",
    "cssnano": "^5.1.13",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-rtlcss": "^3.7.2",
    "purgecss": "^4.1.3",
    "sass": "^1.54.9",
    "stylelint": "^14.11.0",
    "stylelint-config-twbs-bootstrap": "^6.0.0"
  }
}
