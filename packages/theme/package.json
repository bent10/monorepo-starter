{
  "name": "theme",
  "description": "A bare-bones template for Bootstrap-powered theme",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Your ORG (https://example.com)",
  "repository": "https://github.com/org/monorepo",
  "homepage": "https://github.com/org/monorepo/tree/packages/theme",
  "license": "MIT",
  "keywords": [
    "example",
    "bootstrap",
    "theme",
    "scss",
    "css"
  ],
  "type": "module",
  "scss": "./src/scss/theme.scss",
  "exports": "./src/js/theme.ts",
  "main": "dist/assets/js/theme.js",
  "files": [
    "dist",
    "src/js",
    "src/scss",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "types": "tsc src/**/*.ts -d --emitDeclarationOnly --outDir ./dist && resolve-tspaths -o ./dist",
    "lint:scss": "stylelint src/scss --cache --cache-location .cache/stylelint --rd",
    "lint:js": "tsc --noEmit && eslint .",
    "lint": "npm run lint:scss && npm run lint:js",
    "format": "prettier . --write --cache-location .cache/prettier --ignore-path ../../.prettierignore"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.2.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@types/bootstrap": "^5.2.6",
    "autoprefixer": "^10.4.14",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.27",
    "sass": "^1.56.1",
    "stylelint": "^14.16.1",
    "stylelint-config-twbs-bootstrap": "^6.0.0"
  }
}
